<cu-custom bgColor="bg-gradual-blue" isBack="{{false}}">
  <view slot="content">个人中心</view>
</cu-custom>


<view wx:if="{{isHide}}">
  <view wx:if="{{canIUse}}">
    <view class='header'>
      <image src='/images/logo.png'></image>
    </view>
    <view class='content'>
      <view>申请获取以下权限</view>
      <text>获得你的公开信息(昵称，头像等)</text>
    </view>
    <button class='bottom' type='primary' open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="bindGetUserInfo">
      授权登录
    </button>
  </view>
  <view wx:else>请升级小程序版本</view>
</view>


<view wx:else>
  <view class="userinfo">
    <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </view>

  <navigator url="../User_Information/userInfo" hover-class="hover" hover-start-time="{{0}}" class="cell cu-bar bg-white">
    <view class="action sub-title">
      <text class="text-xl text-bold" style="font-size: 30rpx">我的信息</text>
      <text class="bg-grey" style="width 2rem;"></text>
    </view>
  </navigator>
  <navigator url="../User_Download/udl" hover-class="hover" hover-start-time="{{0}}" class="cell cu-bar bg-white">
    <view class="action sub-title">
      <text class="text-xl text-bold" style="font-size: 30rpx">我的下载</text>
      <text class="bg-grey" style="width 2rem;"></text>
    </view>
  </navigator>
  <navigator url="../User_Shoucang/sc" hover-class="hover" hover-start-time="{{0}}" class="cell cu-bar bg-white">
    <view class="action sub-title">
      <text class="text-xl text-bold" style="font-size: 30rpx">我的收藏</text>
      <text class="bg-grey" style="width 2rem;"></text>
    </view>
  </navigator>
  <navigator url="../feedback/feedback" hover-class="hover" hover-start-time="{{0}}" class="cell cu-bar bg-white">
    <view class="action sub-title">
      <text class="text-xl text-bold" style="font-size: 30rpx">意见反馈</text>
      <text class="bg-grey" style="width 2rem;"></text>
    </view>
  </navigator>
</view>